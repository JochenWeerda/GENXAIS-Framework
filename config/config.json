{
    "version": "1.0.0",
    "mongodb": {
        "uri": "mongodb://localhost:27017/",
        "database": "genxais_db",
        "collections": {
            "tasks": "tasks",
            "results": "results",
            "agents": "agents"
        }
    },
    "rag_system": {
        "embedding_model": "all-MiniLM-L6-v2",
        "vector_store_path": "./vector_store",
        "chunk_size": 1000,
        "chunk_overlap": 200
    },
    "apm_framework": {
        "default_phase": "van",
        "phase_timeout": 3600,
        "auto_transition": true
    },
    "langgraph": {
        "max_steps": 10,
        "timeout": 300
    },
    "logging": {
        "level": "INFO",
        "file": "genxais.log",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
} 